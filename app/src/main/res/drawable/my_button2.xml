<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#a75c56" />
            <gradient android:angle="-90" android:startColor="#bc2621" android:endColor="#e64d38"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#a75c56" />
            <solid android:color="#cf312b"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#a75c56" />
            <gradient android:angle="-90" android:startColor="#d76151" android:endColor="#cf312b" />
        </shape>
    </item>
</selector>