<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#45a647" />
            <gradient android:angle="-90" android:startColor="#078404" android:endColor="#6fac64"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#45a647" />
            <solid android:color="#12970e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#45a647" />
            <gradient android:angle="-90" android:startColor="#70a167" android:endColor="#12970e" />
        </shape>
    </item>
</selector>