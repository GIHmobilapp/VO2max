<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4689b7" />
            <gradient android:angle="-90" android:startColor="#0b64a3" android:endColor="#5ba5d9"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4689b7" />
            <solid android:color="#0b64a3"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4689b7" />
            <gradient android:angle="-90" android:startColor="#5ba5d9" android:endColor="#0b64a3" />
        </shape>
    </item>
</selector>