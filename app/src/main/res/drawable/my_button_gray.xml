<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#afc0cc" />
            <gradient android:angle="-90" android:startColor="#818486" android:endColor="#9ea6ac"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#818486" />
            <solid android:color="#818486"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#484343" />
            <gradient android:angle="-90" android:startColor="#9ea6ac" android:endColor="#818486" />
        </shape>
    </item>
</selector>