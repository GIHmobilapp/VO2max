<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.sam.vo2max.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/greeting"
            android:id="@+id/GreetingTextViewID" />


        <CheckBox
            android:text="@string/Pretest1"
            android:id ="@+id/PretestCheckBoxID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@+id/GreetingTextViewID"
  />

        <Button
            android:text="@string/NewMeasurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="330dp"
            android:id="@+id/NewMeasurementButtonID" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="6"
            android:id="@+id/WeightEditTextID"
            android:layout_alignBaseline="@+id/WeightTextViewID"
            android:layout_alignBottom="@+id/AgeEditTextID"
            android:layout_toEndOf="@+id/WeightTextViewID" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="8"
            android:id="@+id/AgeEditTextID"
            android:layout_alignBaseline="@+id/AgeTextView"
            android:layout_alignBottom="@+id/AgeTextView"
            android:layout_toEndOf="@+id/AgeTextView" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:ems="10"
            android:id="@+id/NameEditTextID"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/AgeEditTextID"
            android:textSize="18sp"
            android:selectAllOnFocus="true"
            android:inputType="none|textPersonName" />

        <TextView
            android:text="@string/weighttextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WeightTextViewID"
            android:layout_alignBottom="@+id/NewMeasurementButtonID"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="148dp" />

        <TextView
            android:text="@string/idtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NameTextView"
            android:layout_alignTop="@+id/NameEditTextID"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="@string/agetextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AgeTextView"
            android:layout_marginBottom="15dp"
            android:layout_above="@+id/WeightTextViewID"
            android:layout_alignEnd="@+id/NameTextView" />

        <Button
            android:text="@string/Statistic_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/NewMeasurementButtonID"
            android:layout_alignStart="@+id/AgeTextView"
            android:layout_marginBottom="33dp"
            android:id="@+id/Statistic_Btn"
            android:onClick="viewContact"/>

        <Button
            android:text="@string/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:onClick="search_contact"
            android:id="@+id/button"
            android:layout_below="@+id/WeightTextViewID"
            android:layout_alignStart="@+id/Statistic_Btn" />

        <CheckBox
            android:text="Other tests"
            android:id ="@+id/OtherTestsCheckBoxID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@+id/GreetingTextViewID"
            android:layout_toEndOf="@+id/NameTextView" />


    </RelativeLayout>
</ScrollView>