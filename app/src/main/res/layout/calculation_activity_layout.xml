<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Chronometer
                android:id="@+id/simpleChronometer"
                android:layout_width="80dp"
                android:layout_height="66dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.66"
                android:textAlignment="center"
                android:textColor="#EFEF0C3D"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/StartButtonID"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="0.17"
                android:background="@drawable/my_button_green"
                android:drawableStart="@drawable/ic_startbutton_2_4_black"
                android:paddingEnd="2dp"
                android:paddingStart="5dp"
                android:text="@string/start"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/RestartButtonID"
                android:layout_width="68dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_weight="0.03"
                android:background="@drawable/my_button_gray"
                android:drawableStart="@drawable/ic_resetbutton_2_4"
                android:paddingStart="1dp"
                android:text="@string/reset"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:text="@string/minutes"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:id="@+id/textViewTid"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_weight="0.19"
                android:layout_marginTop="3dp" />

            <TextView
                android:text="@string/number_of_laps"
                android:layout_width="120dp"
                android:layout_height="38dp"
                android:id="@+id/textViewVandor"
                android:layout_weight="0.11"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:layout_marginTop="3dp"
                android:textColor="#EFEF0C3D" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.16"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.13"/>

        <TextView
            android:text="@string/min_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textViewTid3"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:background = "@drawable/my_button_gray_oval"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_weight="0.16" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.16"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.11"/>

        <EditText
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:text="@string/_00"
            android:id="@+id/Vandor3EditTextID"
            android:background = "@drawable/cell_shape_red"
            android:gravity="center"
            android:textSize="24sp"
            android:inputType="number"
            android:layout_weight="0.04" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.37"
        android:weightSum="1">
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.16"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.13"/>

        <TextView
            android:text="@string/min_4"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:id="@+id/textViewTid4"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:background = "@drawable/my_button_gray_oval"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_weight="0.14"
            android:layout_marginTop="4dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.16"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.11"/>

        <EditText
            android:layout_width="81dp"
            android:layout_height="44dp"
            android:text="@string/_000"
            android:id="@+id/Vandor4EditTextID"
            android:gravity="center"
            android:background = "@drawable/cell_shape_red"
            android:textSize="24sp"
            android:inputType="number"
            android:layout_marginTop="5dp"
            android:layout_weight="0.06" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.37"
            android:weightSum="1">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.16"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.13"/>

            <TextView
                android:text="@string/min_5"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:id="@+id/textViewTid5"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:background = "@drawable/my_button_gray_oval"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_weight="0.15"
                android:layout_marginTop="5dp" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.16"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.12"/>

            <EditText
                android:layout_width="86dp"
                android:layout_height="match_parent"
                android:text="@string/_00000"
                android:id="@+id/Vandor5EditTextID"
                android:background = "@drawable/cell_shape_red"
                android:gravity="center"
                android:textSize="24sp"
                android:inputType="number"
                android:layout_marginTop="5dp"
                android:layout_weight="0.04" />

        </LinearLayout>


    <com.example.sam.vo2max.ValueSelector
        android:id="@+id/valueSelector"
        android:layout_width="match_parent"
        android:layout_height="@dimen/valueSelector_height"
        android:layout_marginLeft="@dimen/valueSelector_hMargin"
        android:layout_marginRight="@dimen/valueSelector_hMargin">
    </com.example.sam.vo2max.ValueSelector>


    <Button
        android:id="@+id/CalculateButtonID"
        android:layout_width="158dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/my_button_blue"
        android:drawableStart="@drawable/ic_calculatebutton_2_4"
        android:paddingEnd="3dp"
        android:paddingStart="5dp"
        android:text="@string/Calculate"
        android:textColor="@color/black" />

</LinearLayout>
</ScrollView>