<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:hint="Enter name"
        android:id="@+id/search_name"
        />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="SEARCH"
        android:layout_toRightOf="@id/search_name"
        android:layout_alignParentRight="true"
        android:onClick="searchContact"
        android:id="@+id/button2" />

    <TextView
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_name"
        android:text="Age here"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/display_age"
        />
    
    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/display_age"
        android:text="Weight here"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/display_weight"
        />

    <Button
        android:text="@string/DeleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:id="@+id/delete_btn"
        android:onClick="deleteContact"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button2" />

</RelativeLayout>